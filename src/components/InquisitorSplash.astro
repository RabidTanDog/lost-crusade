---
import { getUrl } from "../utils/getUrl";

interface Props {
  status: string;
  message: string;
}

const { status, message } = Astro.props;
---

<div class="flex flex-col mt-10 items-center justify-center md:flex-row">
  <img
    src={getUrl("/images/emblems/inquisitor.svg")}
    alt="Inquisitor emblem"
    class="mb-4 w-32 md:w-52 lg:w-72"
  />
  <div class="flex flex-col mx-2 text-center md:max-w-xl md:text-left md:mr-10">
    <h2 class="font-bold text-red-700 text-5xl md:text-7xl">{status}</h2>
    <p class="font-bold text-red-700 text-3xl">ORDO HERECTIUS</p>
    <p class="font-light text-xl text-gray-500">
      [ 999.M41 - Documentum obsignatum ]
    </p>
    <p class="font-thin mt-10 text-xl text-gray-500">
      By order of Grand Inquisitor <span class="font-bold">[REDACTED]</span>, {
        message
      }
    </p>
  </div>
</div>
