---
interface Props {
  color: "green" | "sky" | "violet" | "red" | "amber";
  title: string;
}

const { color, title } = Astro.props;
---

<div
  class="bg-white rounded-md border-gray-200 border-2 m-4 p-4 pt-0 drop-shadow-md"
>
  <div
    class={`rounded-md font-semibold bg-${color}-600 border-${color}-800 border-2 text-white p-4text-lg py-2 px-4 -top-4 relative`}
  >
    {title}
  </div>
  <div class="flex flex-col">
    <slot />
  </div>
</div>
