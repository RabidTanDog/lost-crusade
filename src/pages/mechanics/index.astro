---
import { getCollection } from "astro:content";
import Layout from "../../layouts/Layout.astro";

import { getUrl } from "../../utils/getUrl";

const mechanics = await getCollection("mechanics");
---

<Layout title={"Mechanics"} direction="row">
  {
    mechanics.map((mechanic) => (
      <a
        class="bg-white rounded-md flex flex-col border-gray-200 border-2 m-4 p-4 w-32 just items-center md:w-48 dark:bg-slate-800 dark:border-slate-600 hover:drop-shadow-highlight"
        href={getUrl(`/mechanics/${mechanic.data.id}`)}
      >
        <img
          src={getUrl(`/images/icons/mechanics/${mechanic.data.id}.svg`)}
          class="mb-2"
          width={80}
          height={80}
        />
        <h3 class="font-bold text-xl text-center">{mechanic.data.title}</h3>
      </a>
    ))
  }
</Layout>
